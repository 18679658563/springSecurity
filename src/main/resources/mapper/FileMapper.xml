<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rz.security.mapper.FileMapper">
	<resultMap id="BaseModel" type="com.rz.security.pojo.File">
		<id column="id" property="id" jdbcType="CHAR" />
		<result column="content_type" property="contentType" jdbcType="VARCHAR"/>
		<result column="size" property="size" jdbcType="INTEGER"/>
		<result column="path" property="path" jdbcType="VARCHAR"/>
		<result column="url" property="url" jdbcType="VARCHAR"/>
		<result column="type" property="type" jdbcType="VARCHAR"/>
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<sql id="BaseColumn">
		id,content_type,size,path,url,type,create_time,update_time
	</sql>

	<select id="selectById" resultMap="BaseModel">
		select
			<include refid="BaseColumn"/>
				from t_file
					where id = #{id}
	</select>

	<insert id="insertFile">
		insert into t_file
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null and id != '' " >
				id,
			</if>
			<if test="contentType != null and contentType != '' " >
				content_type,
			</if>
			<if test="size != 0 " >
				size,
			</if>
			<if test="path != null and path != '' " >
				path,
			</if>
			<if test="url != null and url != '' " >
				url,
			</if>
			<if test="type != 0 " >
				type,
			</if>
			create_time,update_time
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id != null and id != '' " >
				#{id},
			</if>
			<if test="contentType != null and contentType != '' " >
				#{contentType},
			</if>
			<if test="size != 0 " >
				#{size},
			</if>
			<if test="path != null and path != '' " >
				#{path},
			</if>
			<if test="url != null and url != '' " >
				#{url},
			</if>
			<if test="type != null " >
				#{type},
			</if>
			now(),now()
		</trim>
	</insert>

	<update id="update">
		update t_file t
		<set>
			<if test="contentType != null and contentType != '' ">
				content_type = #{contentType},
			</if>
			<if test="size != 0">
				size = #{size},
			</if>
			<if test="path != null and path != '' ">
				path = #{path},
			</if>
			<if test="url != null and url != '' ">
				url = #{url},
			</if>
			<if test="type != null">
				type = #{type},
			</if>
			update_time = now()
		</set>
		where t.id = #{id}
	</update>


</mapper>
